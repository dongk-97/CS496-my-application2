<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/_top"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/top"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

        <GridView
            android:id="@+id/gridView_top"
            android:layout_toRightOf="@+id/_top"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="1.5dp"
            android:horizontalSpacing="1.5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_margin="10dp"
            ></GridView>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/_bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pants"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

        <GridView
            android:id="@+id/gridView_pants"
            android:layout_toRightOf="@+id/_bottom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="1.5dp"
            android:horizontalSpacing="1.5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_margin="10dp"
            ></GridView>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/_shoes"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/shoes"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

        <GridView
            android:id="@+id/gridView_shoes"
            android:layout_toRightOf="@+id/_shoes"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="1.5dp"
            android:horizontalSpacing="1.5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_margin="10dp"
            ></GridView>



    </RelativeLayout>

    <Button
        android:id="@+id/button_dialog_result"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_rounding"
        android:fontFamily="casual"
        android:text="go to result page"
        android:textStyle="bold"/>



</LinearLayout>